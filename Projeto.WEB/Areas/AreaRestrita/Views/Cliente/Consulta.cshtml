@model Projeto.WEB.Areas.AreaRestrita.Models.Cliente.ConsultaViewModel
@{
    ViewBag.Title = "Consulta";
    Layout = "~/Areas/AreaRestrita/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/moment-with-locales.js"></script>
<script src="~/Scripts/bootstrap-datetimepicker.js"></script>

<script src="~/Scripts/Cliente/consulta.js"></script>


<h2>Consulta de Clientes</h2>
<hr />
<div class="row">
    <div class="col-md-12">

        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-2">
                        <label>CodCliente</label>
                        <input type="text" id="txtCodCliente" class="form-control" placeholder="Digite aqui" name="codCliente" />
                    </div>
                    <div class="col-md-2">
                        <label>CODUN</label>
                        <input type="text" id="txtCodun" class="form-control" placeholder="Digite aqui" name="codun" />
                    </div>
                    <div class="col-md-4">
                        <label>Razão Social</label>
                        <input type="text" id="txtRazaoSocial" class="form-control" placeholder="Digite aqui" name="razaoSocial" />
                    </div>
                    <div class="col-md-4">
                        <label>Nome Fantasia</label>
                        <input type="text" id="txtNomeFantasia" class="form-control" placeholder="Digite aqui" />
                    </div>
                </div>

                <div class="row" style="margin-top:15px">
                    <div class="col-md-3">
                        <label>CNPJ</label>
                        <input type="text" class="form-control" id="txtCnpj" placeholder="Digite aqui" name="cnpj" />
                    </div>

                    <div class="col-md-3">
                        <label>Representante</label>
                        @Html.DropDownListFor(m => m.nomeRepresentante, Model.ListagemRepresentante, "- Selecione -", new { @class = "form-control", @id = "optRepresentante" })
                    </div>

                    <div class="col-md-2">
                        <label>Data Inicio</label>
                        <div class='input-group date'>
                            <input type="text" class="form-control" id="txtDataInicio" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <label>Data Fim</label>
                        <div class='input-group date'>
                            <input type="text" class="form-control" id="txtDataFim" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <input type="submit" value="Consultar" id="btnConsultar" class="btn btn-primary" style="margin-top:25px" />
                    </div>
                </div>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-md-12">
                <table id="tabela" class="table table-hover table-responsive">
                    <thead>
                        <tr>
                            <th class="hidden">
                                idCliente
                            </th>
                            <th>Cod Cliente</th>
                            <th>Codun</th>
                            <th>Razao Social</th>
                            <th>Nome Fantasia</th>
                            <th>Classe</th>
                            <th>Representante</th>
                            <th>Operações</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot>
                        <tr>
                            <td colspan="6">
                                Clientes encontrados: <span id="quantidade"></span>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>


