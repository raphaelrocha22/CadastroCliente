@model Projeto.WEB.Areas.AreaRestrita.Models.Cliente.CadastroViewModel
@{
    Layout = "~/Areas/AreaRestrita/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/CssCustom.css" rel="stylesheet" />

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/Cliente/cadastro.js"></script>

<h4>Cadastro de Cliente</h4>
<hr />

<form id="formCadastroCliente">
    <div class="col-md-12">

        <div class="row">
            <div class="col-md-2">
                <label>*Classe:</label>
                @Html.EnumDropDownListFor(m => m.Classe,"- Selecione -", new { Class = "form-control", id = "optClasse", Name = "classe" })
            </div>

            <div class="col-md-3">
                <label>*Representante</label>
                @Html.DropDownListFor(m => m.IdRepresentante, Model.ListagemRepresentante,"- Selecione -",new {Class = "form-control", id = "optRepresentante", Name = "representante" })
            </div>

            <div class="col-md-3">
                <label>*CNPJ</label>
                <input type="text" class="form-control" id="txtCnpj" placeholder="Digite aqui" name="cnpj" />
                <input type="button" id="btnConsultaCNPJ" class="btn btn-success btn-xs" value="Consultar pelo CNPJ" />
            </div>

            <div class="col-md-2">
                <label>CODUN</label>
                <input type="number" id="txtCodun" class="form-control" placeholder="Digite aqui" name="codun" />
            </div>
        </div>
        <hr />

        <div class="row" style="margin-top:15px">
            <div class="col-md-4">
                <label>*Razão Social</label>
                <input type="text" id="txtRazaoSocial" class="form-control" placeholder="Digite aqui" name="razaoSocial" />
            </div>
            <div class="col-md-4">
                <label>Nome Fantasia</label>
                <input type="text" id="txtNomeFantasia" class="form-control" placeholder="Digite aqui" />
            </div>
            <div class="col-md-2">
                <label>*Inscrição Estadual</label>
                <input type="text" id="txtInscEstadual" class="form-control" placeholder="Digite aqui" />
            </div>
            <div class="col-md-2">
                <label>*Inscrição Municipal</label>
                <input type="text" id="txtInscMunicipal" class="form-control" placeholder="Digite aqui" />
            </div>
        </div>
        <hr />

        <div class="enderecoCadastro">
            <div class="row">
                <div class="col-md-3">
                    <label>*Endereco Cadastro</label>
                </div>
            </div>
            <div class="row" style="margin-top:15px">
                <div class="col-md-3">
                    <label>*Logradouro</label>
                    <input type="text" id="cadastro_Logradouro" class="form-control" placeholder="Digite aqui" name="logradouro" />
                </div>
                <div class="col-md-2">
                    <label>*Número</label>
                    <input type="text" id="cadastro_Numero" class="form-control" placeholder="Digite aqui" name="numero" />
                </div>
                <div class="col-md-2">
                    <label>Complemento</label>
                    <input type="text" id="cadastro_Complemento" class="form-control" placeholder="Digite aqui" />
                </div>
                <div class="col-md-2">
                    <label>*Bairro</label>
                    <input type="text" id="cadastro_Bairro" class="form-control" placeholder="Digite aqui" name="bairro" />
                </div>
                <div class="col-md-2">
                    <label>*Munícipio</label>
                    <input type="text" id="cadastro_Municipio" class="form-control" placeholder="Digite aqui" name="municipio"/>
                </div>
                <div class="col-md-1">
                    <label>*UF</label>
                    <input type="text" id="cadastro_UF" class="form-control" placeholder="Digite aqui" name="uf" />
                </div>
            </div>

            <div class="row" style="margin-top:15px">
                <div class="col-md-2">
                    <label>*CEP</label>
                    <input type="text" id="cadastro_CEP" class="form-control" placeholder="Digite aqui" name="cep" />
                </div>
                <div class="col-md-3">
                    <label>E-mail</label>
                    <input type="email" id="cadastro_Email" class="form-control" placeholder="Digite aqui" name="email" />
                </div>
                <div class="col-md-2">
                    <label>Telefone1</label>
                    <input type="text" id="cadastro_Telefone1" class="form-control" placeholder="Digite aqui" />
                </div>
                <div class="col-md-2">
                    <label>Telefone2</label>
                    <input type="text" id="cadastro_Telefone2" class="form-control" placeholder="Digite aqui" />
                </div>
            </div>
        </div>

        <hr />

        <div class="enderecoCobranca">
            <div class="row">
                <div class="col-md-5">
                    <label>*Endereco de Cobrança</label><br />
                    <input type="checkbox" id="check_Cobranca_Cadastro"> Igual ao endereco de cadastro
                </div>
            </div>
            <div class="row" style="margin-top:15px">
                <div class="col-md-3">
                    <label>*Logradouro</label>
                    <input type="text" id="cobranca_Logradouro" class="form-control cobranca" placeholder="Digite aqui" name="cobranca_logradouro" />
                </div>
                <div class="col-md-2">
                    <label>*Número</label>
                    <input type="text" id="cobranca_Numero" class="form-control cobranca" placeholder="Digite aqui" name="cobranca_numero"/>
                </div>
                <div class="col-md-2">
                    <label>Complemento</label>
                    <input type="text" id="cobranca_Complemento" class="form-control cobranca" placeholder="Digite aqui"/>
                </div>
                <div class="col-md-2">
                    <label>*Bairro</label>
                    <input type="text" id="cobranca_Bairro" class="form-control cobranca" placeholder="Digite aqui" name="cobranca_bairro"/>
                </div>
                <div class="col-md-2">
                    <label>*Munícipio</label>
                    <input type="text" id="cobranca_Municipio" class="form-control cobranca" placeholder="Digite aqui" name="cobranca_municipio"/>
                </div>
                <div class="col-md-1">
                    <label>*UF</label>
                    <input type="text" id="cobranca_UF" class="form-control cobranca" placeholder="Digite aqui" name="cobranca_UF" />
                </div>
            </div>

            <div class="row" style="margin-top:15px">
                <div class="col-md-2">
                    <label>*CEP</label>
                    <input type="text" id="cobranca_CEP" class="form-control cobranca" placeholder="Digite aqui" name="cobranca_cep"/>
                </div>
                <div class="col-md-3">
                    <label>E-mail</label>
                    <input type="email" id="cobranca_Email" class="form-control cobranca" placeholder="Digite aqui" name="email" />
                </div>
                <div class="col-md-2">
                    <label>Telefone1</label>
                    <input type="text" id="cobranca_Telefone1" class="form-control cobranca" placeholder="Digite aqui" />
                </div>
                <div class="col-md-2">
                    <label>Telefone2</label>
                    <input type="text" id="cobranca_Telefone2" class="form-control cobranca" placeholder="Digite aqui" />
                </div>
            </div>
        </div>

        <hr />

        <div class="enderecoEntrega">
            <div class="row">
                <div class="col-md-3">
                    <label>*Endereco de Entrega</label><br />
                    <input type="checkbox" id="check_Entrega_Cadastro"> Igual ao endereco de cadastro<br />
                    <input type="checkbox" id="check_Entrega_Cobranca"> Igual ao endereco de cobrança
                </div>
            </div>
            <div class="row" style="margin-top:15px">
                <div class="col-md-3">
                    <label>*Logradouro</label>
                    <input type="text" id="entrega_Logradouro" class="form-control entrega" placeholder="Digite aqui" name="entrega_logradouro" />
                </div>
                <div class="col-md-2">
                    <label>*Número</label>
                    <input type="text" id="entrega_Numero" class="form-control entrega" placeholder="Digite aqui" name="entrega_numero" />
                </div>
                <div class="col-md-2">
                    <label>Complemento</label>
                    <input type="text" id="entrega_Complemento" class="form-control entrega" placeholder="Digite aqui" />
                </div>
                <div class="col-md-2">
                    <label>*Bairro</label>
                    <input type="text" id="entrega_Bairro" class="form-control entrega" placeholder="Digite aqui" name="entrega_bairro" />
                </div>
                <div class="col-md-2">
                    <label>*Munícipio</label>
                    <input type="text" id="entrega_Municipio" class="form-control entrega" placeholder="Digite aqui" name="entrega_municipio" />
                </div>
                <div class="col-md-1">
                    <label>*UF</label>
                    <input type="text" id="entrega_UF" class="form-control entrega" placeholder="Digite aqui" name="entrega_UF" />
                </div>
            </div>

            <div class="row" style="margin-top:15px">
                <div class="col-md-2">
                    <label>*CEP</label>
                    <input type="text" id="entrega_CEP" class="form-control entrega" placeholder="Digite aqui" name="entrega_cep" />
                </div>
                <div class="col-md-3">
                    <label>E-mail</label>
                    <input type="email" id="entrega_Email" class="form-control entrega" placeholder="Digite aqui" name="email" />
                </div>
                <div class="col-md-2">
                    <label>Telefone1</label>
                    <input type="text" id="entrega_Telefone1" class="form-control entrega" placeholder="Digite aqui" />
                </div>
                <div class="col-md-2">
                    <label>Telefone2</label>
                    <input type="text" id="entrega_Telefone2" class="form-control entrega" placeholder="Digite aqui" />
                </div>
            </div>
        </div>

        <div class="row" style="margin-top:15px">
            <div class="col-md-2">
                <input type="submit" value="Cadastrar" id="btnCadastrar" class="btn btn-primary" />
            </div>
        </div>

    </div>
</form>

