@model IEnumerable<Projeto.WEB.Areas.AreaRestrita.Models.Users.ConsultaViewModel>

@{
    ViewBag.Title = "Consulta";
    Layout = "~/Areas/AreaRestrita/Views/_Shared/_Layout.cshtml";
}

<h4>Consultar Usuarios</h4>

<p>
    @Html.ActionLink("Cadastrar novo usuário", "Cadastro")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Perfil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdUsuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Perfil)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Editar", "Cadastro", new { id = item.IdUsuario }) |
            @Html.ActionLink("Alterar Senha", "AlterarSenha", new { id = item.IdUsuario }) |
        </td>
    </tr>
    }

</table>
