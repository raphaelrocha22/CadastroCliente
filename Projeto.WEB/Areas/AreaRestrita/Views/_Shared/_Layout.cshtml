<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastro Cliente RBR</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <style>
        .footer {
            position: unset;
            left: 0;
            margin-top: 15px;
            height: 60px;
            width: 100%;
            text-align: center;
        }
    </style>

</head>
<body>

    @using Projeto.Entidades
    @{
        Usuario u = (Usuario)Session["usuario"];
    }

    <nav class="navbar navbar-default">
        <div class="navbar-header">
            <a class="navbar-brand" href="/AreaRestrita/Cliente/Index"><img src="~/Imagens/logoRodenstock.png" width="70" height="35" /></a>
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse bg-info" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><a href="/AreaRestrita/Cliente/Index">Página Inicial<span class="sr-only">(current)</span></a></li>
                <li class="dropdown">
                    <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Cliente <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="/AreaRestrita/Cliente/Cadastro">Cadastrar Cliente</a></li>
                        <li><a href="/AreaRestrita/Cliente/Consulta">Consultar/Editar Cliente</a></li>
                    </ul>
                </li>

                <li class="dropdown">
                    <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">ClubR<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="/AreaRestrita/ClubR/Cadastro">Cadastrar Cliente</a></li>
                        <li><a href="/AreaRestrita/ClubR/Consulta">Consultar/Editar Cliente</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Upgrade<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="/AreaRestrita/Upgrade/Cadastro">Cadastrar Cliente</a></li>
                        <li><a href="/AreaRestrita/Upgrade/Consulta">Consultar/Editar Cliente</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Markup+<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="/AreaRestrita/Markup/Cadastro">Cadastrar Cliente</a></li>
                        <li><a href="/AreaRestrita/Markup/Consulta">Consultar/Editar Cliente</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Sem Campanha<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="/AreaRestrita/SemCampanha/Cadastro">Cadastrar Cliente</a></li>
                        <li><a href="/AreaRestrita/SemCampanha/Consulta">Consultar/Editar Cliente</a></li>
                    </ul>
                </li>

                @if (u.Perfil.ToString().Equals("Administrador"))
                {
                    <li class="dropdown">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Administrador<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/AreaRestrita/Usuario/Cadastro">Cadastrar Usuário</a></li>
                            <li><a href="/AreaRestrita/Usuario/Consulta">Consultar/Editar Usuário</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Central<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="/AreaRestrita/CentralSolicitacao/Index">Consultar</a></li>
                        </ul>
                    </li>
                }

            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li><a href="/Usuario/Logout" class="glyphicon glyphicon-off" style="color:red"></a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <div class="footer">
        <hr />
        <p>Rodenstock Brasil - Dúvidas ou outras informações envie um Email para raphael.rocha@rodenstock.com.br</p>
    </div>

</body>
</html>